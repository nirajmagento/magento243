<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="watchcenter_mobile_product_stock_notify" engine="innodb" comment="Mobile Product Stock Notify">
        <column xsi:type="int" name="id" unsigned="true" nullable="false" identity="true" comment="Id"/>
        <column xsi:type="int" name="product_id" comment="Product Id"/>
        <column xsi:type="int" name="customer_id" comment="Customer Id"/>
        <column xsi:type="boolean" name="is_notify" default="false" comment="Is Notified"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Creation Time"/>
        <column xsi:type="timestamp" name="updated_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Update Time"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
    <table name="watchcenter_mobile_product_stock_notify_cron_email" engine="innodb" comment="Mobile Product Stock Notify Cron data">
        <column xsi:type="int" name="id" unsigned="true" nullable="false" identity="true" comment="Id"/>
        <column xsi:type="int" name="product_id" comment="Product Id"/>
        <column xsi:type="int" name="customer_id" comment="Customer Id"/>
        <column xsi:type="boolean" name="is_send" default="false" comment="Is Send"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
</schema>
